<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_below="@id/v5"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <ProgressBar
            android:id="@+id/progress"
            android:progressTint="@color/colorPrimary"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_width"
            android:layout_alignStart="@id/progress_icon_tray"
            android:layout_alignEnd="@id/progress_icon_tray"
            android:layout_marginStart="@dimen/icon_width_by_2"
            android:layout_marginEnd="@dimen/icon_width_by_2"
            android:max="100" />
        <LinearLayout
            android:id="@+id/progress_icon_tray"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginEnd="@dimen/align_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/icon_stage_1"
                    android:background="@drawable/border"
                    app:tint="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width"
                    android:src="@drawable/ic_baseline_store_24"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/icon_stage_1"
                    android:textColor="@android:color/black"
                    android:text="@string/stage_1"
                    android:gravity="center"
                    android:layout_alignStart="@id/icon_stage_1"
                    android:layout_alignEnd="@id/icon_stage_1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginEnd="@dimen/align_margin"
                android:layout_marginStart="@dimen/align_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/icon_stage_2"
                    android:background="@drawable/border"
                    app:tint="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width"
                    android:src="@drawable/ic_baseline_card_travel_24"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/icon_stage_2"
                    android:textColor="@android:color/black"
                    android:text="@string/stage_2"
                    android:gravity="center"
                    android:layout_alignStart="@id/icon_stage_2"
                    android:layout_alignEnd="@id/icon_stage_2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginEnd="@dimen/align_margin"
                android:layout_marginStart="@dimen/align_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/icon_stage_3"
                    android:background="@drawable/border"
                    app:tint="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width"
                    android:src="@drawable/ic_baseline_directions_bike_24"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/icon_stage_3"
                    android:textColor="@android:color/black"
                    android:text="@string/stage_3"
                    android:gravity="center"
                    android:layout_alignStart="@id/icon_stage_3"
                    android:layout_alignEnd="@id/icon_stage_3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginEnd="@dimen/align_margin"
                android:layout_marginStart="@dimen/align_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/icon_stage_4"
                    android:background="@drawable/border"
                    app:tint="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width"
                    android:src="@drawable/ic_baseline_receipt_24"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/icon_stage_4"
                    android:textColor="@android:color/black"
                    android:text="@string/stage_4"
                    android:gravity="center"
                    android:layout_alignStart="@id/icon_stage_4"
                    android:layout_alignEnd="@id/icon_stage_4"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="@dimen/align_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/icon_stage_5"
                    android:background="@drawable/border"
                    app:tint="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width"
                    android:src="@drawable/ic_baseline_restaurant_24"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/icon_stage_5"
                    android:textColor="@android:color/black"
                    android:text="@string/stage_5"
                    android:gravity="center"
                    android:layout_alignStart="@id/icon_stage_5"
                    android:layout_alignEnd="@id/icon_stage_5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="65dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/sample"
        tools:srcCompat="@drawable/sample" />


    <ImageView
        android:id="@+id/iv2"
        android:layout_width="65dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75dp"
        android:layout_toRightOf="@id/iv1"
        app:srcCompat="@drawable/sampletwo"
        tools:srcCompat="@drawable/sampletwo" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv2"
        android:text="2 items ordered"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv2"
        android:text="See details >"
        android:textSize="16dp" />

    <View
        android:id="@+id/v1"
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_below="@id/iv1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:background="#B1A6A6" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="Order ID"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginRight="13dp"
        android:text="ORDERNUMBER4867392208600039"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="13dp" />

    <View
        android:id="@+id/v2"
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_below="@id/tv3"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="#B1A6A6" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="Order Date"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:text="Oct 23,2019 9:08 PM"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="13dp" />

    <View
        android:id="@+id/v3"
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_below="@id/tv5"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="#B1A6A6" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v3"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="Payment Mode"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:text="PHONEPE"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="13dp" />

    <View
        android:id="@+id/v4"
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_below="@id/tv7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="#B1A6A6"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/v4"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/locationpin"
        tools:srcCompat="@drawable/locationpin" />

    <TextView
        android:id="@+id/tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv2"
        android:layout_below="@id/v4"
        android:text="OFFICE"
        android:textStyle="bold"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/tv9"
        android:text="2nd floor,Hno 12,Road no 37,Back side of MGS Hospital,West Punjabi Bagh,Punjabi Bagh,Delhi,110026,India"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_marginLeft="100dp"
        android:layout_below="@id/tv10"
        android:layout_marginTop="5dp"
        android:text="Instruction:Call on arrival,bring cutlery"
        android:textSize="13dp" />
    <View
        android:id="@+id/v5"
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_below="@id/tv11"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="#B1A6A6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparing Dinner"
            android:id="@+id/tv12"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@id/order_layout"
            android:layout_marginLeft="20dp"
            android:textSize="13dp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected arrival time:"
        android:id="@+id/tv13"
        android:layout_below="@id/tv12"
        android:layout_marginLeft="20dp"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:51 PM"
        android:id="@+id/tv14"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@id/tv12"
        android:layout_toRightOf="@id/tv13"
